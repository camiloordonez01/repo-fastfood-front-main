{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "moduleResolution": "node",
        "module": "commonJS",
        "lib": ["ES2021", "dom"],
        "target": "ES2021",
        "jsx": "react"
    },
    "exclude": ["node_modules", "dist"]
}
